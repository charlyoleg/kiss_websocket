doctype html
html(lang="fr")
  head
    meta(charset='utf-8')
    title kiss_websocket
    meta(name='description', content='A sandbox to experiment WebSocket')
    meta(name='author', content='charlyoleg')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='css/kiss_websocket_style.css?v=1.0')
